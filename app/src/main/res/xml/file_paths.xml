<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This path covers files in the app's private cache directory -->
    <cache-path name="cache" path="." />
    <!-- This path covers files in the app's private files directory -->
    <files-path name="files" path="." />
    <!-- This path covers files in the root of the external storage (requires appropriate permissions) -->
    <external-path name="external_files" path="." />
    <!-- This path covers files in the primary external storage's Pictures directory -->
    <external-path name="external_pictures" path="Pictures/" />
    <!-- This path covers files in the primary external storage's Movies directory -->
    <external-path name="external_movies" path="Movies/" />
    <!-- This path covers files in the primary external storage's Documents directory -->
    <external-path name="external_documents" path="Documents/" />
    <!-- This path covers files in the primary external storage's Download directory -->
    <external-path name="external_download" path="Download/" />

    <!-- Specific path for iSecure vault if it's in a known public directory.
         Example: If files are stored in "Documents/.iSecureVault"
    <external-path name="isecure_vault" path="Documents/.iSecureVault/" />
    -->

    <!-- Specific path for unhidden files if it's in "Downloads/SecureUnhide/" -->
    <external-path name="isecure_unhide" path="Download/SecureUnhide/" />

</paths>
