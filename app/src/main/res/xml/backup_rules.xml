<?xml version="1.0" encoding="utf-8"?>
<full-backup-content>
    <!-- Exclude all sensitive data from Android backup for security -->
    
    <!-- Exclude all shared preferences (contains PIN and sensitive settings) -->
    <exclude domain="sharedpref" />
    
    <!-- Exclude all databases -->
    <exclude domain="database" />
    
    <!-- Exclude all internal files (vault content) -->
    <exclude domain="file" />
    
    <!-- Exclude all cache directories -->
    <exclude domain="cache" />
    
    <!-- This configuration ensures no sensitive data is backed up -->
</full-backup-content>